<% layout('layouts/boilerplate') %> 
    <h1>All Concerts</h1>
    <p><a href="/concerts/new">Add New Concert</a></p>
    <ul>
        <% for(let concert of concerts){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(concert.images.length){ %> 
                            <img class="img-fluid" src="<%= concert.images[0].url %> " alt="">
                        <% }else { %>
                            <img class="img-fluid" src="https://res.cloudinary.com/di9tp2zow/image/upload/v1671820620/BangYourHead/mvpddonanqv5ndnr7d5v.jpg" alt="">                         
                        <% } %>  
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= concert.title %> 
                            </h5>
                            <p class="card-text"><%= concert.description %> </p>
                            <p class="card-text">
                                <small class="text-muted"><%= concert.location %> </small>
                            </p>
                            <a class="btn btn-primary" href="/concerts/<%= concert._id %> ">View <%= concert.title %>  Concert</a>
                        </div>
                    </div>
                </div>
            </div>
        
       <% } %> 
    </ul>


