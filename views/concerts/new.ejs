<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Concert</h1>
    <div class="col-6 offset-3">
        <form action="/concerts" method="post">
            <div class="mb-3">
                <label class="form-label" for="title">Band name</label>
                <input class="form-control" type="text" id="title" name="concert[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Concert location</label>
                <input class="form-control" type="text" id="location" name="concert[location]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="image" name="concert[image]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Concert Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input name="concert[price]" id="price" type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="concert[description]"></textarea>
            </div>
            <div class="mb-3"><button class="btn btn-success">Add Concert</button>
            </div>
        </form>
        <a href="/concerts">All Concerts</a>
    
    </div>
</div>