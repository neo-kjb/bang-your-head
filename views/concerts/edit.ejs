<% layout('layouts/boilerplate') %> 

    <div class="row">
        <h1 class="text-center">Edit Concert</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/concerts/<%= concert._id %>?_method=put " method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Band name</label>
                    <input class="form-control" type="text" id="title" name="concert[title]" value="<%= concert.title %>" required>
                    <div class="valid-feedback">
                        Valid
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Concert location</label>
                    <input class="form-control" type="text" id="location" name="concert[location]" value="<%= concert.location %> " required>
                    <div class="valid-feedback">
                        Valid
                    </div>
                    
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Concert Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input value="<%= concert.price %> " name="concert[price]" id="price" type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                        <div class="valid-feedback">
                            Valid
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="concert[description]" required><%= concert.description %></textarea >
                    <div class="valid-feedback">
                        Valid
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image">Add Images</label>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                  </div>
                </div>
                <div class="mb-3">
                    <% concert.images.forEach(function(img,i){ %>
                        <img src="<%= img.thumbnail %> " class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" value="<%= img.filename %>" id="image-<%= i %> ">
                        </div>
                        <label for="image-<%= i %> ">Delete</label>
                    <% }) %> 
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Concert</button>
                </div>

            </form>
            <a href="/concerts/<%= concert._id %> ">Back To Concert</a>
        
        </div>
    </div>
